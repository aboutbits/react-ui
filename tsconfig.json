{
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "outDir": "./dist/esm",
    "declaration": true,
    "importHelpers": true
  },
  "exclude": [
    "**/__test__/*",
    "**/__tests__/*",
    "**/*.stories.tsx",
    "**/*.stories.ts",
    "src/examples/*"
  ],
  "include": ["src"]
}
