{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist/esm",
    "declaration": true,
    "strict": true,
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/__test__/*",
    "**/__tests__/*",
    "**/*.stories.tsx",
    "**/*.stories.ts"]
}
